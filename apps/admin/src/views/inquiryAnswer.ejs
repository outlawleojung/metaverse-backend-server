<script>
  const adjustTextAreaHeight = () => {
    const textAreas = document.getElementsByClassName('auto-resize-textarea');
    Array.from(textAreas).forEach((textArea) => {
      textArea.style.height = 'auto';
      const textAreaHeight = Math.max(textArea.scrollHeight, 100);
      textArea.style.height = `${textAreaHeight}px`;
    });
  };
  window.addEventListener('DOMContentLoaded', adjustTextAreaHeight);
  document.addEventListener('input', (event) => {
    const target = event.target;
    if (target && target.classList.contains('auto-resize-textarea')) {
      adjustTextAreaHeight();
    }
  });
</script>
