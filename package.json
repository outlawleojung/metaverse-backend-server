  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/moai-backend-webserver/main",
    "start:account": "cross-env NODE_ENV=production pm2 --name account start dist/apps/account/main",
    "start:contents": "cross-env NODE_ENV=production pm2 --name contents start dist/apps/account/main",
    "start:admin": "cross-env NODE_ENV=production pm2 --name admin-api start dist/apps/account/main",
    "start:gateway": "cross-env NODE_ENV=production pm2 --name gateway start dist/apps/account/main",
    "start:webview": "cross-env NODE_ENV=production pm2 --name webview-api start dist/apps/account/main",
    "start:payments": "cross-env NODE_ENV=production pm2 --name payments start dist/apps/account/mainh",
    "start:pass": "cross-env NODE_ENV=production pm2 --name pass start dist/apps/account/main",
    "start:sockets": "cross-env NODE_ENV=production pm2 --name sockets start dist/apps/account/main",
    "dev:account": "nest start account --watch",
    "dev:contents": "nest start contents --watch",
    "dev:admin": "nest start admin --watch",
    "dev:gateway": "nest start gateway --watch",
    "dev:webview": "nest start webview --watch",
    "dev:payments": "nest start payments --watch",
    "dev:pass": "nest start pass --watch",
    "dev:sockets": "nest start sockets --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/moai-backend-webserver/test/jest-e2e.json"
  },
  "dependencies": {
